{
  "name": "ts-graphql-boilerplat",
  "version": "1.0.0",
  "description": "A TypeScript GraphQL Server Boilerplate using type-graphql, prisma, mercurius and fastify.",
  "main": "./dist/index.js",
  "repository": "git@github.com:RayKayy/ts-graphql-boilerplate.git",
  "author": "RayKayy <rayk199492@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "nodemon ./src/index.ts --exec ts-node",
    "pretty": "prettier -c ./src/**/*.ts",
    "test": "mocha -r ts-node/register ./src/**/*.{spec,test}.ts",
    "test:unit": "mocha -r ts-node/register ./src/**/*.spec.ts",
    "build": "tsc",
    "clear": "rm -rf ./dist",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.7",
    "prettier": "2.8.1",
    "prisma": "^4.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.3",
    "fastify": "^4.10.2",
    "graphql": "^16.6.0",
    "mercurius": "^11.4.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "nodemonConfig": {
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "verbose": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn typecheck && yarn test:unit"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  }
}
