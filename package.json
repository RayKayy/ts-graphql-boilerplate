{
  "name": "ts-graphql-boilerplat",
  "version": "1.0.0",
  "description": "A TypeScript GraphQL Server Boilerplate using type-graphql, prisma, mercurius and fastify.",
  "main": "./dist/index.js",
  "repository": "git@github.com:RayKayy/ts-graphql-boilerplate.git",
  "author": "RayKayy <rayk199492@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "nodemon ./src/index.ts --exec ts-node",
    "pretty": "prettier -c ./src/**/*.ts",
    "test": "mocha -r ts-node/register ./src/**/*.{spec,test}.ts",
    "test:unit": "mocha -r ts-node/register ./src/**/*.spec.ts",
    "build": "tsc",
    "clear": "rm -rf ./dist",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.7",
    "prettier": "2.2.1",
    "prisma": "^2.16.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "class-validator": "^0.13.1",
    "dotenv": "^8.2.0",
    "fastify": "^3.11.0",
    "graphql": "^15.5.0",
    "mercurius": "^6.12.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "nodemonConfig": {
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "verbose": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn typecheck && yarn test:unit"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  }
}
